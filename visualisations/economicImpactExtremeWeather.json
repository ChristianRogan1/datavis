{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Economic Impact and Number of Extreme Weather Events in Australia vs Year",
    "description": "Economic impact and extreme eeather events vs Year",
    "width": 600,
    "height": 400,
    "data": {
      "url": "https://raw.githubusercontent.com/ChristianRogan1/datavis/refs/heads/master/data/climate_change_impact_on_agriculture_2024.csv"  
    },
    "transform": [
      {"filter": "datum.Country === 'Australia'"},
      {"calculate": "datum.Economic_Impact_Million_USD * 0.00148",
        "as": "Economic_Impact_Billion_AUD"}
    ],
    
    "layer": [
      {
        "mark": {
          "type": "line",
          "strokeWidth": 2
        },
        "encoding": {
          "x": {
            "field": "Year",
            "type": "temporal",
            "axis": {"title": "Year"}
          },
          "y": {
            "field": "Extreme_Weather_Events",
            "type": "quantitative",
            "axis": {"title": "Extreme Weather Events", "titleColor": "darkred"},
            "aggregate": "sum"
          },
          "color": {"value": "darkred"}
        }
        
      },
      {
        "mark": {
          "type": "line",
          "strokeWidth": 2
        },
        "encoding": {
          "x": {
            "field": "Year",
            "type": "temporal"
          },
          "y": {
            "field": "Economic_Impact_Billion_AUD",
            "type": "quantitative",
            "axis": {"title": "Economic Impact (Billion AUD)", "titleColor": "darkgreen"},
            "aggregate": "sum"
          },
          "color": {"value": "darkgreen"}
        }
      }
      
    
    ],
    "encoding": {
      "tooltip": [
        {"field": "Economic_Impact_Billion_AUD", "aggregate": "sum", "title": "Economic Impact", "type": "quantitative", "format": ".2f"},
        {"field": "Year", "title": "year", "type": "temporal", "timeUnit": "year"},
        {"field": "Extreme_Weather_Events", "aggregate": "sum", "type": "quantitative", "title": "Number of Extreme Weather Events"}
        
        
      ]
    },
    "resolve": {
      "scale": {
        "y": "independent"
      }
    }
  }
  