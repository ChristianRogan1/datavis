{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "CO2 Production and Crop Yield",
    "width": 800,
    "height": 400,
    "data": {
      "url": "https://raw.githubusercontent.com/ChristianRogan1/datavis/refs/heads/master/data/worldMap.json",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "transform": [
      {
        "lookup": "properties.NAME",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/ChristianRogan1/datavis/refs/heads/master/data/climate_change_impact_on_agriculture_2024.csv"
          },
          "key": "Country",
          "fields": ["CO2_Emissions_MT", "Crop_Yield_MT_per_HA"]
        }
      },
      {"calculate": "datum.CO2_Emissions_MT", "as": "CO2 Production"},
      {"calculate": "datum.Crop_Yield_MT_per_HA", "as": "Crop Yield"}
    ],
    "projection": {"type": "equalEarth"},
    "layer": [
      {
        "mark": {"type": "geoshape", "fill": "lightgrey", "stroke": "black", "strokeWidth": 0.5}
      },
      {
        "mark": {"type": "geoshape", "stroke": "black", "strokeWidth": 0.5},
        "encoding": {
          "color": {
            "field": "CO2 Production",
            "type": "quantitative",
            "scale": {"type": "log"},
            "legend": {"title": "CO2 Emissions (MT)"}
          },
          "tooltip": [
            {"field": "properties.NAME", "type": "nominal", "title": "Country"},
            {"field": "CO2_Emissions_MT", "type": "quantitative", "title": "CO2 Emissions (MT)"}
          ]
        }
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/ChristianRogan1/datavis/refs/heads/master/data/climate_change_impact_on_agriculture_2024.csv"
        },
        "mark": {
          "type": "point",
          "filled": true,
          "color": "red"
        },
        "encoding": {
          "size": {
            "field": "Crop_Yield_MT_per_HA",
            "type": "quantitative",
            "scale": {"range": [10, 500]} 
          },
          "tooltip": [
            {"field": "Country", "type": "nominal", "title": "Country"},
            {"field": "Crop_Yield_MT_per_HA", "type": "quantitative", "title": "Crop Yield (MT/HA)"}
          ]
        }
      }
    ]
  }
  